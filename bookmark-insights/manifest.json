{
  "manifest_version": 3,
  "name": "Bookmark Insight",
  "version": "2.0.0",
  "description": "A powerful bookmark manager with smart search, insights, enrichment, and maintenance tools",
  "permissions": [
    "bookmarks",
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bookmark Insight"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

{
  "manifest_version": 3,
  "name": "Netflix Speed Controller",
  "version": "2.0",
  "description": "Control Netflix video playback speed with keyboard shortcuts",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Speed Controller"
  },
  "commands": {
    "increase_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period",
        "mac": "Command+Shift+Period"
      },
      "description": "Increase video speed"
    },
    "decrease_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+Comma",
        "mac": "Command+Shift+Comma"
      },
      "description": "Decrease video speed"
    },

    "toggle_speed": {
      "suggested_key": {
        "default": "Alt+T",
        "mac": "Alt+T"
      },
      "description": "Toggle between 1x and last used speed"
    },
    "skip_forward": {
      "suggested_key": {
        "default": "Alt+Right",
        "mac": "Alt+Right"
      },
      "description": "Skip forward"
    },
    "skip_backward": {
      "suggested_key": {
        "default": "Alt+Left",
        "mac": "Alt+Left"
      },
      "description": "Skip backward"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
